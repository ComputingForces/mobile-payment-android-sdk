<?xml version="1.0" encoding="utf-8"?>
       <LinearLayout
           xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <TextView
        android:id="@+id/payment_confirm_text"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_left_indent"
        android:layout_marginRight="@dimen/default_right_indent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:text="@string/payment_confirm"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/title"
        android:textSize="18sp"/>

        <EditText
            android:id="@+id/input_sms_code"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"

            android:layout_below="@+id/payment_confirm_text"
            android:inputType="numberDecimal"
            android:minEms="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginLeft="@dimen/default_left_indent"
            android:layout_marginRight="@dimen/default_right_indent"
            android:maxLines="1"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            tools:text="4456"
            android:hint="@string/x20_sms_confirm_hint"
        />


    <Button
            android:theme="@style/AppTheme.Button.Blue"
            android:id="@+id/confirm_sms_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_left_indent"
            android:layout_marginRight="@dimen/default_right_indent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"

            android:textStyle="normal"
            android:minWidth="220dp"
            android:layout_centerHorizontal="true"
            android:text="@string/x20_sms_confirm_button_title"
            android:textSize="16sp"/>


</LinearLayout>
